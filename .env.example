# Eco-Sync MCP Server Configuration
# Copy this file to .env and fill in your values

# Database configuration
DATABASE_PATH=./data/supply_chain_records.json

# Emission factors (EPA standards, g CO2e per unit)
# Air transport: g CO2e per kg per km
AIR_EMISSION_FACTOR=0.255

# Sea transport: g CO2e per kg per km  
SEA_EMISSION_FACTOR=0.0112

# Land transport: g CO2e per kg per km
LAND_EMISSION_FACTOR=0.0613

# Server configuration
MCP_SERVER_PORT=3000
